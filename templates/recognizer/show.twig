{% extends "layouts/master.twig" %}

{% block title %}Recognizer{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
{% endblock %}

{% block content %}

    <div class="col-md-2">
        <h3>{{ recognizer.name }} {{ recognizer.surname }}</h3>
        <img src="{{ recognizer.gravatar }}?s=200">
        <br><br>
        <p><b>NIF</b>: {{ recognizer.nif }}</p>
        <p><b>Email</b>: {{ recognizer.email }}</p>
    </div>

    <div class="col-md-10">
        <div class="row">
            <div class="col-md-12">
                <h3>Subjects:</h3>

                <br>

                <table id="results" class="display">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for subject in subjects %}
                        <tr>
                            <td class="col-md-1">{{ subject.id }}</td>
                            <td class="col-md-2">{{ subject.code }}</td>
                            <td class="col-md-8">{{ subject.name }}</td>
                            <td class="col-md-1" style="text-align: center;">
                                <button class="btn btn-danger remove" rel="{{ subject.id }}">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row">
                <h3>Add subject to recognizer:</h3>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            $('#results').DataTable();

            $(document).on('click', '.remove', function (e) {
                if (!confirm("Are you sure?")) {
                    return;
                }

                var subjectId = $(this).attr('rel');

                $.ajax({
                    method: 'DELETE',
                    url: '/recognizers/{{ recognizer_id }}/subjects/' + subjectId,
                    dataType: 'JSON'
                }).done(function (data) {
                    if (data.success) {
                        alert('Subject removed successfully.');
                        window.location.reload();
                    } else {
                        alert('Oops, something went wrong!');
                    }
                }).fail(function (err) {
                    alert('Oops, something went wrong!');
                });
            });
        });
    </script>
{% endblock %}