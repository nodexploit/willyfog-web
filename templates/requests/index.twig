{% extends "layouts/master.twig" %}

{% block title %}Hello{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
{% endblock %}

{% block content %}

    <h1>Hello {{ auth.user.name }} !</h1>

    <h3>Here are your open requests:</h3>

    <br>

    <div class="row">
        <div class="col-md-6">
        <table id="requests" class="display">
            <thead>
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            {% for request in requests %}
                <tr>
                    <td class="col-md-1">{{ request.id }}</td>
                    <td class="col-md-2">{{ request.subject_code }}</td>
                    <td>
                        <a href="/requests/{{ request.id }}">
                            {{ request.subject_name }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>

    <br>

    <button class="btn btn-success">Create new request</button>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            $('#requests').DataTable();
        });
    </script>
{% endblock %}
